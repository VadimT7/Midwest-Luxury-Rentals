# Minimum rental age
MIN_RENTAL_AGE=18

# Default security deposit amount (in cents)
DEFAULT_DEPOSIT_AMOUNT=0

# Cash payment requires card on file
CASH_REQUIRES_CARD_HOLD=true

# ============================================
# DEVELOPMENT
# ============================================

# Enable debug mode
